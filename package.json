{
	"name": "beejee-todo-app",
	"version": "1.0.0",
	"description": "ToDo list application with admin panel",
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"server": "nodemon server.js",
		"client": "cd client && npm start",
		"build": "cd client && npm run build",
		"install-client": "cd client && npm install"
	},
	"dependencies": {
		"express": "^4.18.2",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"express-rate-limit": "^7.1.5",
		"sqlite3": "^5.1.6",
		"bcryptjs": "^2.4.3",
		"jsonwebtoken": "^9.0.2",
		"express-validator": "^7.0.1",
		"xss": "^1.0.14"
	},
	"devDependencies": {
		"nodemon": "^3.0.2",
		"concurrently": "^8.2.2"
	},
	"keywords": [
		"todo",
		"express",
		"react",
		"sqlite"
	],
	"author": "Beejee Test",
	"license": "MIT"
}
